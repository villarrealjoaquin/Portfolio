---
import { t } from "i18next";
import SectionContainer from "../components/SectionContainer.astro";
---

<SectionContainer id="contact" class="my-16">
  <h2 class="font-bold my-3 text-3xl text-[#cacacd]">{t("contact.title")}</h2>
  <p class="text-[#b8bfcf] mb-6 text-sm text-pretty sm:text-base">
    {t("contact.paragraph1")}
  </p>
  <p class="text-[#b8bfcf] mb-6 text-sm text-pretty sm:text-base">
    {t("contact.paragraph2")}
  </p>
  <article class="flex flex-col gap-8 items-center">
    <div class="flex flex-col sm:flex-row items-center gap-5">
      <a
        href="mailto:villarrealjoaquin09@gmail.com"
        class="text-[#b688ee] w-[200px] text-sm sm:w-[220px] sm:text-base hover:underline font-bold"
      >
        ✉️ {t("contact.gmail")}
      </a>
      <span class="text-lg">o</span>
      <a
        href="https://www.linkedin.com/in/joaquin-villarreal-248711236/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-[#b688ee] w-[220px] sm:w-[250px] sm:text-base hover:underline font-bold text-sm"
      >
        🔗 {t("contact.linkedin")}
      </a>
    </div>
  </article>
</SectionContainer>
