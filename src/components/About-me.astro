---
import { t } from "i18next";
import SectionContainer from "../components/SectionContainer.astro";
---

<h2 class="font-bold my-3 text-3xl text-[#cacacd]">{t("sections.about")}</h2>
<SectionContainer
  id="about-me"
  class="sm:flex mb-28 h-auto gap-3 text-white rounded-md"
>
  <article class="w-1/2 hidden xl:block">
    <img
      src="https://i.pinimg.com/originals/98/33/5f/98335fcd764b32cae3780b1e1d5d39b4.gif"
      class="w-full h-full object-cover rounded-md"
      alt="background 64 bits"
    />
  </article>

  <div class="w-full xl:w-1/2 flex m-auto flex-col items-center gap-3">
    <article
      class="bg-[#1a1f2e] p-5 w-[290px] sm:w-full sm:p-8 xl:w-full rounded-md"
    >
      <h2 class="font-bold my-3 text-xl text-[#cacacd]">
        {t("aboutme.who_i_am.title")}
      </h2>
      <p class="mb-4 text-base text-balance">
        {t("aboutme.paragraph1.prayer1")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph1.prayer2")}</span
        >
        {t("aboutme.paragraph1.prayer3")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph1.prayer4")}</span
        >{t("aboutme.paragraph1.extra")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph1.prayer5")}</span
        >
      </p>
      <p class="text-base text-balance">
        {t("aboutme.paragraph1.prayer6")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph1.prayer7")}</span
        >
        {t("aboutme.paragraph1.prayer8")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph1.prayer9")}</span
        >
        {t("aboutme.paragraph1.prayer10")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph1.prayer11")}</span
        >
        {t("aboutme.paragraph1.prayer12")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph1.prayer13")}</span
        >{t("aboutme.paragraph1.prayer14")}
      </p>
    </article>

    <article class="bg-[#1a1f2e] p-5 w-[290px] sm:w-full sm:p-8 xl:w-full">
      <h2 class="font-bold my-3 text-xl text-[#cacacd]">
        {t("aboutme.technologies.title")}
      </h2>
      <p class="mb-4 text-balance">
        {t("aboutme.paragraph2.prayer1")}
        <span class="text-[#b688ee] font-bold">React</span>, <span
          class="text-[#b688ee] font-bold">Next.js</span
        >, <span class="text-[#b688ee] font-bold">TypeScript</span>, <span
          class="text-[#b688ee] font-bold">Node.js</span
        >, <span class="text-[#b688ee] font-bold">Nest.js</span>, <span
          class="text-[#b688ee] font-bold">Express</span
        >, {t("aboutme.paragraph2.prayer2")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph2.prayer3")}</span
        >
        {t("aboutme.paragraph2.prayer4")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph2.prayer5")}</span
        >.
      </p>
      <p>
        {t("aboutme.paragraph2.prayer7")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph2.prayer8")}</span
        >
        {t("aboutme.paragraph2.prayer9")}
        <span class="text-[#b688ee] font-bold"
          >{t("aboutme.paragraph2.prayer10")}</span
        >. {t("aboutme.paragraph2.prayer11")}
      </p>
    </article>
  </div>
</SectionContainer>
